        xmlns:local="clr-namespace:WpfToSkia.Demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}" d:DataContext="{d:DesignInstance Type={x:Type local:MainWindow},IsDesignTimeCreatable=False}">
    <Grid Background="Transparent">
        <DockPanel>
            <StackPanel DockPanel.Dock="Right">
                <Button Width="100" VerticalAlignment="Top" Click="Button_Click">ADD</Button>
                <Button Width="100" VerticalAlignment="Top" Click="Button_Click_1">REMOVE</Button>
            </StackPanel>
            <!--<ScrollViewer HorizontalScrollBarVisibility="Visible" CanContentScroll="True">-->
                <!--<Border>-->
